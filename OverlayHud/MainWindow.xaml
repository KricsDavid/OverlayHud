<Window x:Class="OverlayHud.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="AI HUD"
        Width="640"
        Height="720"
        MinWidth="540"
        MinHeight="520"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        Topmost="True"
        ShowInTaskbar="False"
        Background="Transparent">
    <Window.Resources>
        <LinearGradientBrush x:Key="ShellGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF1C1D25" Offset="0" />
            <GradientStop Color="#FF101119" Offset="1" />
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="SidebarGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#662E3352" Offset="0" />
            <GradientStop Color="#44191930" Offset="1" />
        </LinearGradientBrush>
        <Style x:Key="AccentButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#3324B0FF" />
            <Setter Property="BorderBrush" Value="#7724B0FF" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10,6" />
            <Setter Property="Margin" Value="0,6,0,0" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="6"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5524B0FF" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#8824B0FF" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="14">
        <Border CornerRadius="22"
                BorderBrush="#55FFFFFF"
                BorderThickness="1.2"
                Background="{StaticResource ShellGradient}"
                SnapsToDevicePixels="True">
            <Border.Effect>
                <DropShadowEffect Color="#CC000000"
                                  BlurRadius="24"
                                  ShadowDepth="6"
                                  Opacity="0.55" />
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="58" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Title Bar -->
                <Border Grid.Row="0"
                        Background="#22191A21"
                        Padding="20,0"
                        MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Overlay HUD"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,10,0" />
                            <Border Background="#33FFFFFF"
                                    Padding="6,2"
                                    CornerRadius="4">
                                <TextBlock Text="ChatGPT Session"
                                           Foreground="#CCFFFFFF"
                                           FontSize="12" />
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">
                            <Button Width="32"
                                    Height="28"
                                    Margin="0,0,6,0"
                                    Content="—"
                                    FontSize="16"
                                    Click="MinimizeButton_Click" />
                            <Button Width="32"
                                    Height="28"
                                    Content="✕"
                                    FontSize="14"
                                    Click="CloseButton_Click" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Body -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="230" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Sidebar -->
                    <Border Grid.Column="0"
                            Background="{StaticResource SidebarGradient}"
                            Padding="20,24"
                            BorderBrush="#22FFFFFF"
                            BorderThickness="0,1,1,0"
                            CornerRadius="0,0,0,22">
                        <StackPanel>
                            <TextBlock Text="Control Center"
                                       Foreground="White"
                                       FontWeight="SemiBold"
                                       FontSize="16" />
                            <TextBlock Text="Manage visibility &amp; safety"
                                       Foreground="#AAFFFFFF"
                                       FontSize="12"
                                       Margin="0,2,0,16" />

                            <StackPanel Margin="0,8,0,12">
                                <TextBlock Text="Hotkeys"
                                           Foreground="#CCFFFFFF"
                                           FontWeight="Bold"
                                           FontSize="13" />
                                <TextBlock Text="Insert · toggle HUD"
                                           Foreground="#AAFFFFFF"
                                           FontSize="12" />
                                <TextBlock Text="Delete + Insert · uninstall"
                                           Foreground="#AAFFFFFF"
                                           FontSize="12" />
                            </StackPanel>

                            <Separator Margin="0,4,0,8" />

                            <CheckBox x:Name="TopMostToggle"
                                      Content="Keep on top"
                                      IsChecked="True"
                                      Foreground="#F0F0F0"
                                      Checked="TopMostToggle_Changed"
                                      Unchecked="TopMostToggle_Changed" />

                            <StackPanel Margin="0,12,0,0">
                                <TextBlock Text="HUD Opacity"
                                           Foreground="#CCFFFFFF"
                                           FontSize="12"
                                           Margin="0,0,0,4" />
                                <Slider x:Name="OpacitySlider"
                                        Minimum="0.6"
                                        Maximum="1"
                                        Value="1"
                                        TickPlacement="None"
                                        ValueChanged="OpacitySlider_ValueChanged" />
                            </StackPanel>

                            <Button Content="Refresh ChatGPT"
                                    Style="{StaticResource AccentButtonStyle}"
                                    Click="RefreshButton_Click" />

                            <Button Content="Show / Hide Now"
                                    Style="{StaticResource AccentButtonStyle}"
                                    Click="ShowHideButton_Click" />

                            <Button Content="Delete Overlay"
                                    Style="{StaticResource AccentButtonStyle}"
                                    Background="#33FF5F5F"
                                    BorderBrush="#77FF5F5F"
                                    Click="DeleteButton_Click" />

                            <StackPanel Margin="0,16,0,0">
                                <TextBlock Text="Status"
                                           Foreground="#CCFFFFFF"
                                           FontWeight="Bold"
                                           FontSize="13" />
                                <TextBlock x:Name="StatusText"
                                           Text="Ready"
                                           Foreground="#88FFFFFF"
                                           FontSize="12" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- WebView Surface -->
                    <Border Grid.Column="1"
                            Margin="0,12,12,12"
                            CornerRadius="18"
                            Background="#FF0F1017"
                            BorderBrush="#22FFFFFF"
                            BorderThickness="1"
                            Padding="6">
                        <Grid>
                            <wv2:WebView2 x:Name="WebView"
                                          HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch"
                                          DefaultBackgroundColor="Transparent" />
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>